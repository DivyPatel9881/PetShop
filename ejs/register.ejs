<% include header.ejs %>
	
	<link rel="stylesheet" href="/register.css"/>
	
	<div class="container">
		<% if(Failure){ %>
			<div class="well well-sm danger">
				<%= Failure %>
			</div>
		<% } %>
		<div class="row">
			<div class="col-lg-3">
			</div>
			<div class="col-lg-6">	
				<a href="/petshop"><button class="btn btn-primary back"><i class="fas fa-arrow-circle-left"></i></button></a>
				<form class="form-horizontal" action="/signup" method="POST">
					<div class="form-group">
					  <label class="control-label col-lg-3 col-xs-3" for="username">USERNAME:</label>
					  <div class="col-lg-9 col-xs-9">
						<input type="text" class="form-control input-lg" id="username" placeholder="Enter username" name="username">
					  </div>
					</div>
					<div class="form-group">
					  <label class="control-label col-lg-3 col-xs-3" for="pwd">PASSWORD:</label>
					  <div class="col-lg-9 col-xs-9">          
						<input type="password" class="form-control input-lg" id="pwd" placeholder="Enter password" name="password">
					  </div>
					</div>
					
					<div class="form-group">        
						<div class="col-lg-3 col-xs-3">
						</div>
						<div class="col-lg-6 col-xs-6">
							<button type="submit" class="btn btn-primary btn-block signup">SIGN UP</button>
						</div>
						<div class="col-lg-3 col-xs-3">
						</div>
					</div>
			  </form>
			</div>
			<div class="col-lg-3">
			</div>
		</div>
	</div>
	
<% include footer.ejs %>